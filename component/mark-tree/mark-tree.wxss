 .ques-num {
     font-size: 28rpx;
     color: #333;
     background-color: #e0f0ff;
     padding: 0 80rpx;
     min-height: 90rpx;
     display: flex;
     align-items: center;
 }
 
 .easy {
     overflow: hidden;
     padding: 0 48rpx 0 48rpx;
 }
 
 .easy-son {
     border-bottom: 1rpx solid #f5f5f5;
     padding: 30rpx 0 0rpx 0;
 }
 
 .right-answer .nochildren {
     margin: 0 0 20rpx 0;
 }
 
 .easy .right-answer {
     font-size: 30rpx;
 }
 
 .easy .taps {
     font-size: 24rpx;
     margin: 44rpx 0 24rpx 0;
 }
 
 .easy .taps .left {
     height: 50rpx;
     line-height: 50rpx;
     margin-bottom: 20rpx;
 }
 
 .easy .taps .ques {
     width: 71rpx;
     height: 46rpx;
     line-height: 42rpx;
     font-size: 28rpx;
     border-radius: 36rpx;
     color: #2896fe;
     border: 2rpx solid #2896fe;
     float: left;
     text-align: center;
     margin: 0 0 20rpx 20rpx;
 }
 
 .easy .taps .unormal {
     width: 171rpx;
     height: 52rpx;
     line-height: 48rpx;
 }
 
 .easy .taps .answer .checked {
     color: #fff;
     background-color: #2896fe;
     border: 2rpx solid #2896fe;
 }
 
 .easy .taps .answer .checkedRed {
     color: #fff;
     background-color: #fe3f43;
     border: 2rpx solid #fe3f43;
 }
 
 .clearfix:after {
     visibility: hidden;
     display: block;
     font-size: 0;
     content: " ";
     clear: both;
     height: 0
 }
 
 .left {
     float: left;
 }