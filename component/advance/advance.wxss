/* component/advance.wxss */

.hint {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.7);
    z-index: 9999;
    overflow: hidden;
}

.hint .hint-box {
    position: absolute;
    left: 50%;
    top: 40%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    width: 590rpx;
    height: 314rpx;
    border-radius: 6rpx;
    padding: 70rpx 0 0 0;
}