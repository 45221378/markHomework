    /* font-size: 30rpx; */
    margin: 40rpx 0rpx 0 0;
    vertical-align: middle;
}

.workReport .see {
    /* font-size: 30rpx; */
    color: #2896fe;
    display: inline-block;
}

.workReport .clearflex {
    display: flex;
}

.workReport .ansewrtext {
    /* font-size: 30rpx; */
    width: 122rpx;
    text-align: right;
}

.workReport .errorright {
    /* font-size: 30rpx; */
    line-height: 40rpx;
    width: 550rpx;
    padding-left: 24rpx;
}

.padt20 {
    padding-top: 20rpx;
}

.padt30 {
    padding-top: 30rpx;
}

.padt34 {
    padding-top: 34rpx;
}

.padt40 {
    padding-top: 40rpx;
}

.mgbt {
    margin: 30rpx 0 10rpx 0;
}

.workReport .error {
    color: #fe2841;
    border: 2rpx solid #fe2841;
    min-width: 72rpx;
    padding: 0 14rpx;
    height: 44rpx;
    font-size: 24rpx;
    border-radius: 26rpx;
    text-align: center;
    line-height: 40rpx;
    /* margin: 10rpx 0; */
    display: inline-block;
}

.workReport .noerror {
    color: #2896fe;
    border: 2rpx solid #2896fe;
    width: 72rpx;
    height: 44rpx;
    font-size: 24rpx;
    border-radius: 26rpx;
    text-align: center;
    line-height: 40rpx;
    margin: 20rpx 0;
    display: inline-block;
}

.workReport .noerror image {
    width: 30rpx;
    height: 32rpx;
    vertical-align: middle;
}

.workReport .answerdetail {
    font-size: 30rpx;
    float: left;
    margin: 0 20rpx 20rpx 0;
}

.workReport .changeAns {
    display: flex;
}

.workReport .audio {
    position: relative;
}

.workReport .audio .playaudioImg {
    width: 40rpx;
    height: 40rpx;
    z-index: 999;
    padding: 30rpx 30rpx 30rpx 0;
}

.workReport .audio .audioflex {
    display: flex;
    align-items: center;
}

.workReport .audio .audioflex .timelong {
    font-size: 24rpx;
}

.workReport .rotate {
    width: 40rpx;
    height: 40rpx;
    animation: a 1s linear infinite;
    margin: 30rpx 30rpx 30rpx 0;
}

@keyframes a {
    0% {
        -webkit-transform: rotate(0deg);
    }

    25% {
        -webkit-transform: rotate(90deg);
    }

    50% {
        -webkit-transform: rotate(180deg);
    }

    75% {
        -webkit-transform: rotate(270deg);
    }

    100% {
        -webkit-transform: rotate(360deg);
    }
}

.workReport .parser-content {
    margin: 30rpx 0;
    border-top: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
    padding: 30rpx 15rpx;
}