/* 正文内容 */
.workReport {
    padding: 11vh 0 0 0;
}

.workReport .workReport-scroll {
    padding: 0 0 120rpx 0;
}

.workReport-title {
    width: 100%;
    height: 176rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0 62rpx 0 42rpx;
}

.workReport .workReport-title1 {
    font-size: 24rpx;
    color: #333;
    flex: 1;
}

.workReport .workReport-title1 .mgt30 {
    margin-top: 30rpx;
}

.workReport .check-img {
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    width: 194rpx;
    height: 52rpx;
    background-color: #2896fe;
    line-height: 52rpx;
    text-align: center;
    border-radius: 26rpx;
    position: relative;
}

.workReport .opacityImg {
    position: absolute;
    height: 50rpx;
    width: 150rpx;
    top: 0;
    left: 0;
    opacity: 0;
}

.workReport .right-precent {
    width: 100%;
    height: 370rpx;
    position: relative;

}



.workReport .right-precent .show-canvas {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 224rpx;
    width: 224rpx;
    position: absolute;
    top: 20rpx;
    left: 50%;
    transform: translateX(-50%);
}

.workReport .right-precent .show-canvas .canvas {
    height: 224rpx;
    width: 224rpx;
}

.workReport .right-precent .show-canvas .blue {
    position: absolute;
    height: 224rpx;
    width: 224rpx;
}

.workReport .right-precent .canvas_txt1 {
    font-size: 54rpx;
    color: #333;
    position: absolute;
    top: 64rpx;
    left: 50%;
    transform: translateX(-50%);
}

.workReport .right-precent .canvas_txt2 {
    font-size: 26rpx;
    color: #999;
    position: absolute;
    top: 134rpx;
    left: 50%;
    transform: translateX(-50%);

}

.workReport .right-precent .lang {
    position: absolute;
    left: 0;
    bottom: 0;
    height: 130rpx;
    width: 100%;
}

.workReport .answer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx;
    background-color: #f9f9f9;
}

.workReport .answer .answer-detail {
    font-size: 30rpx;
    color: #333;
}

.workReport .answer .re-check {
    font-size: 28rpx;
    color: #fe2841;
    border: 1rpx solid #fe2841;
    width: 266rpx;
    height: 54rpx;
    border-radius: 27rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.workReport .answer .re-check .star {
    width: 33rpx;
    height: 33rpx;
    margin-right: 12rpx;

}

.workReport .fixed-btn {
    background-color: #fff;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    height: 120rpx;
    width: 100%;
}

.workReport .submit {
    width: 470rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0;
    font-size: 28rpx;
    color: #fff;
    border-radius: 40rpx;
    background-color: #2896fe;
    margin: 20rpx auto;
}

.workReport .workReport-content {
    padding: 50rpx 0 20rpx 0;
    border-bottom: 1rpx solid #eee;
}

.workReport .workReport-content .ques-num {
    font-size: 28rpx;
    color: #333;
    margin: 0 0 20rpx 0;
    padding: 0 30rpx;

}

.workReport .workReport-content .ques-index {
    padding: 0 30rpx;
}

.workReport .workReport-content .ques-index .i {
    font-size: 28rpx;
    color: #2896fe;
    height: 44rpx;
    padding: 0 30rpx;
    border-radius: 22rpx;
    border: 1rpx solid #2896fe;
    float: left;
    margin: 0 20rpx 20rpx 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.workReport .workReport-content .ques-index .wrong {
    color: #fe2841 !important;
    border: 1rpx solid #fe2841 !important;
    background-color: #fff !important;
}

.workReport .workReport-content .ques-index .double {
    color: #f3750f !important;
    border: 1rpx solid #f3750f !important;
    background-color: #fff !important;
}

.workReport .workReport-content .ques-index .checked {
    color: #fff !important;
    border: 1rpx solid #2896fe !important;
    background-color: #2896fe !important;
}



/* 渲染复杂题块的时候出现的逻辑 */
