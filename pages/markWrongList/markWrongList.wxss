.markWrongList {
    padding: 0 0 50rpx 0;
}

.markWrongList .top {
    text-align: center;
    font-size: 28rpx;
    display: block;
    padding: 20rpx 0 20rpx 0;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
    width: 100%;
    z-index: 999;
    border-top: 1rpx solid #f5f5f5;
}

.markWrongList .question {
    margin: 78rpx 0 110rpx 0;
}

.markWrongList .question .ques-num {
    font-size: 28rpx;
    color: #333;
    background-color: #e0f0ff;
    padding: 0 80rpx;
    min-height: 90rpx;
    display: flex;
    align-items: center;
}

.markWrongList .question .easy {
    overflow: hidden;
    padding: 0 48rpx 0 48rpx;
}

.markWrongList .question .easy-son {
    border-bottom: 1rpx solid #f5f5f5;
    padding: 30rpx 0 0rpx 0;
}

.markWrongList .spe {
    margin-top: 20rpx;
}

.markWrongList .right-answer .nochildren {
    margin: 0 0 20rpx 0;
}

.markWrongList .haveanswer {
    margin: 20rpx 0 20rpx 0;
    font-size: 26rpx;
}

.markWrongList .question .easy .right-answer {
    font-size: 30rpx;
}

.markWrongList .question .easy .taps {
    font-size: 24rpx;
    margin: 44rpx 0 24rpx 0;
}

.markWrongList .question .easy .taps .left {
    height: 50rpx;
    line-height: 50rpx;
    margin-bottom: 20rpx;
}

.markWrongList .question .easy .taps .ques {
    width: 71rpx;
    height: 46rpx;
    line-height: 42rpx;
    font-size: 28rpx;
    border-radius: 36rpx;
    color: #2896fe;
    border: 2rpx solid #2896fe;
    float: left;
    text-align: center;
    margin: 0 0 20rpx 20rpx;
}

.markWrongList .question .easy .taps .unormal {
    width: 171rpx;
    height: 52rpx;
    line-height: 48rpx;
}

.markWrongList .question .easy .taps .answer .checked {
    color: #fff;
    background-color: #2896fe;
    border: 2rpx solid #2896fe;
}

.markWrongList .question .easy .taps .answer .checkedRed {
    color: #fff;
    background-color: #fe3f43;
    border: 2rpx solid #fe3f43;
}

.markWrongList .submit {
    width: 631rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0;
    font-size: 28rpx;
    color: #fff;
    border-radius: 40rpx;
    background-color: #2896fe;
}

.bottom-btn {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    overflow: hidden;
    background-color: #fff;
    padding: 20rpx 0 40rpx 0;
    box-shadow: 0 0 10rpx #ddd;
}


/* 视频播放样式 */

.videoCss {
    position: relative;
    width: 160rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
}

.videoCss .bannerImg {
    width: 100%;
    height: 100%;
}

.videoCss .playImg {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.seeVideo {
    width: 160rpx;
    height: 80rpx;
}


/* 广告样式情况 */

.go-videoList {
    color: #2896fe;
    font-size: 24rpx;
    text-align: right;
    padding: 0 30rpx 10rpx 0;
}

.showVideo {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    color: #ff4900;
    font-size: 24rpx;
    padding: 0 0 20rpx 0;
}

.showVideo .icon {
    width: 44rpx;
    height: 44rpx;
    padding: 0 20rpx 0 0;
}