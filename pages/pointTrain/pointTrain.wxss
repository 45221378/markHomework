.pointTrain{
  background-color: #f9f9f9;
  height: 100vh;
  padding-top: 24rpx;
}

.pointTrain .title{
  background: #fff;
  color: #333;
  font-size: 30rpx;
  margin-bottom: 24rpx;
  text-align: center;
  padding: 20rpx 0;
}
.pointTrain .content{
  background: #fff;
  overflow: hidden;
  padding: 0 80rpx;

}
.pointTrain .content .tips{
  color: #333;
  font-size: 24rpx;
  text-align: center;
  display: block;
  margin: 80rpx 0;
}
.pointTrain .content .net{
  padding: 0 20rpx ;

}
.pointTrain .content .net .net-work{
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
  line-height: 50rpx;
  margin-right: 20rpx;

}
.pointTrain .content .net .copy{
  font-size: 26rpx;
  color: #488ed6;
  padding-left: 20rpx;
}
.pointTrain .content .error{
  color: #999;
  font-size: 26rpx;
}
.pointTrain .download{
  background-color: #2996ff;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 26rpx;
  margin: 100rpx 0;
}

.pointTrain .copy-btn{
  background-color: #2996ff;
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  color: #fff;
  font-size: 26rpx;
  display: inline-block;
  vertical-align: middle;
}

