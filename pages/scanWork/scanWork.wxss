/* pages/scanWork/scanWork.wxss */

.myWork {
    position: relative;
    background-color: #f9f9f9;
    padding-top: calc(11vh);
}

.bgdfdf {
    background-color: #f9f9f9;
    padding: 8rpx 0 0 0;
}

.bgfff {
    background-color: #fff;
}

.myWork .title {
    font-size: 32rpx;
    color: #000;
    display: block;
    text-align: center;
    padding: 6vh 0 0rpx 0;
    height: 11vh;
    background-color: #fff;
    z-index: 9999;
    font-weight: 600;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
}

.myWork .section {
    padding: 20rpx 0 0 40rpx;
}

.myWork .section-title {
    font-size: 28rpx;
    color: #333;
}

.myWork .section-check {
    width: 16rpx;
    height: 14rpx;
    display: inline-block;
    margin-left: 12rpx;
}

.myWork .myWork-ul {
    margin-top: 8rpx;
    overflow: hidden;
}

.myWork .myWork-ul .myWork-li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    padding: 20rpx 0 20rpx 0;
}

.myWork .myWork-ul .myWork-li .bg-img {
    width: 125rpx;
    height: 125rpx;
    margin-right: 20rpx;
    background-color: #2896fe;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    position: relative;
}

.myWork .myWork-ul .myWork-li .bg-img .subject-img {
    width: 80rpx;
    height: 80rpx;
    display: block;
    margin: 0 0 20rpx 0;
}

.myWork .myWork-ul .myWork-li .bg-img .troduces {
    width: 125rpx;
    height: 125rpx;
    border-radius: 50%;
    background-color: #385dff;
    font-size: 22rpx;
    color: #fff;
    position: absolute;
    top: 90rpx;
    left: 0;
    text-align: center;
    padding: 4rpx 0 0 0;
}

.myWork .myWork-ul .myWork-li .bg-img .bg-green {
    background-color: #00c8bc !important;
}

.myWork .myWork-ul .myWork-li .center {
    flex: 1;
}

.myWork .myWork-ul .myWork-li .center .center-top {
    display: flex;
    font-size: 30rpx;
    margin-bottom: 10rpx;
    justify-content: flex-start;
    align-items: center;
    position: relative;
}

.myWork .myWork-ul .myWork-li .center .center-page {
    display: flex;
    text-align: left;
    justify-content: flex-start;
    align-items: center;
}

.myWork .myWork-ul .myWork-li .center .center-page .section_name {
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 350rpx;
    overflow: hidden;
}

.myWork .myWork-ul .myWork-li .center .pen {
    width: 19rpx;
    height: 22rpx;
    margin: 0 8rpx 0 20rpx;
    vertical-align: middle;
}

.myWork .myWork-ul .myWork-li .center .nomark {
    font-size: 20rpx;
    color: #ff4b4b;
}

.myWork .myWork-ul .myWork-li .img-right {
    height: 30rpx;
    width: 20rpx;
    /* padding: 70rpx 0 30rpx 250rpx;
  position: absolute;
  right: 0;
  top: 0; */
}

.pdlr30 {
    padding: 0 30rpx 0 30rpx;
    background-color: #fff;
}

.myWork .myWork-ul .myWork-bot {
    display: flex;
    margin: 0 0 20rpx 0;
    background-color: #fff;
    padding: 20rpx 0 20rpx 0;
    border-top: 1rpx solid #eeeeee;
}

.myWork .myWork-ul .myWork-bot .borderR {
    border-right: 1rpx solid #eeeeee;
}

.myWork .myWork-ul .myWork-bot .img-time {
    width: 20rpx;
    height: 20rpx;
    display: inline-block;
    margin-right: 6rpx;
    vertical-align: middle;
}

.myWork .myWork-ul .myWork-bot text {
    font-size: 26rpx;
}

.myWork .myWork-ul .myWork-bot .book-time {
    width: 166rpx;
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    text-align: left;
    vertical-align: middle;
}

.myWork .myWork-ul .myWork-bot .book-name {
    width: 420rpx;
    display: inline-block;
    vertical-align: middle;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1;
}

.myWork .myWork-ul .myWork-bot .img-book {
    width: 16rpx;
    height: 22rpx;
    display: inline-block;
    margin: 0 6rpx 0 26rpx;
    vertical-align: middle;
}

.scroll-view {
    height: calc(100vh - 11vh);
}

.area {
    width: 100vw;
    height: calc(100vh - 11vh);
    position: fixed;
    bottom: 0;
    z-index: 9999;
    border-top: 1rpx solid #f9f9f9;
    pointer-events: none;
}

.view {
    height: 200rpx;
    width: 200rpx;
    z-index: 999;
    pointer-events: auto;
}

.myWork .scan {
    /* position: fixed; */
    /* bottom: 170rpx;
  right: 44rpx; */
    height: 200rpx;
    width: 200rpx;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.myWork .scan .image {
    height: 60rpx;
    width: 60rpx;
}

.myWork .scan .text {
    font-size: 30rpx;
    color: #fff;
    margin-top: 14rpx;
}

.scanWork {
    position: relative;
    height: 100vh;
}

.scanWork image {
    height: 540rpx;
    width: 100%;
    position: relative;
}

.scanWork .seeVideo {
    display: none;
}

.scanWork .click {
    font-size: 30rpx;
    color: #333;
    text-align: center;
    margin-top: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.scanWork .knowmore {
    color: #2896fe;
    font-size: 28rpx;
    text-align: center;
    margin: 40rpx 0 10rpx 0;
}

.scanWork .scan {
    margin: 30rpx auto 0;
    height: 240rpx;
    width: 240rpx;
    background-color: #2896fe;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.scanWork .scan image {
    height: 70rpx;
    width: 70rpx;
}

.scanWork .scan text {
    font-size: 34rpx;
    color: #fff;
    margin-top: 24rpx;
}

.myWork .noData image {
    width: 370rpx;
    height: 280rpx;
    margin: 100rpx auto 20rpx;
    display: block;
}

.myWork .noData .say {
    font-size: 30rpx;
    color: #999;
}

.myWork .noData .say text {
    display: block;
    line-height: 50rpx;
    text-align: center;
}


/* 按章节按题目查看的情况 */

.myWork .table {
    background: #fff;
    padding: 16rpx 0;
    width: 100%;
    margin-top: 11vh;
    border-top: 1rpx solid #eee;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}

.myWork .table .table-check {
    height: 72rpx;
    width: 540rpx;
    border: 1rpx solid #2896fe;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 40rpx;
    margin: 0 auto;
}

.myWork .table .chapter {
    color: #2896fe;
    font-size: 28rpx;
    text-align: center;
    flex: 1;
    height: 100%;
    border-right: 1rpx solid #2896fe;
    line-height: 70rpx;
    border-radius: 40rpx 0 0 40rpx;
}

.myWork .table .ques {
    color: #2896fe;
    font-size: 28rpx;
    text-align: center;
    flex: 1;
    line-height: 70rpx;
    height: 72rpx;
    border-radius: 0 40rpx 40rpx 0;
}

.myWork .table .checked {
    color: #fff !important;
    background-color: #2896fe !important;
}

.myWork .swiper {
    width: 100%;
    height: 300rpx;
}

.myWork .explain {
    width: 100%;
    height: 300rpx;
}


/* 图表的样式 */

.show-canvas {
    position: relative;
    width: 120rpx;
    height: 110rpx;
    margin: 0 10rpx 0 0;
}

.canvas {
    width: 110rpx;
    height: 110rpx;
}

.show-canvas .canvas_txt1 {
    color: #333;
    font-size: 26rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 28rpx;
    color: #385dff;
}

.show-canvas .canvas_txt2 {
    color: #999;
    font-size: 19rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 62rpx;
}