/* pages/findPsd/findPsd.wxss */
.findPsd{
  padding: 100rpx 140rpx 140rpx 140rpx;
}
.findPsd .title{
  font-weight: 600;
  font-size: 38rpx ;
  color:#333;
}
.findPsd .findPsd-form{
  margin-top: 20rpx;
}
.findPsd .border{
  border-bottom: 1px solid #ddd;
}
.findPsd .border input{
  font-size: 24rpx;
  padding:  40rpx 0 10rpx 0;
  height: 110rpx;
}
.findPsd .border .userCode{
  width: 240rpx;
}
.black{
  color: #e6e6e6;
}
.findPsd .border .getCode {
  font-size: 24rpx;
  color: #999;
  float: right;
  width: 160rpx;
  background-color: #f7f7f7;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  margin: 46rpx 10rpx 0 0;
}
.findPsd .findPsd-form .reg{
  width: 506rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  background-color: #2896fe;
  color: #fff;
  margin-top: 60rpx;
  box-sizing: border-box;
}
.findPsd .hint-form{
  margin-top: 50rpx;
}
.findPsd .hint-form .resetpsd{ 
  font-size: 26rpx;
  color: #666;
  margin: 30rpx 0 30rpx 0;
}
.findPsd .hint-form .input_row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.findPsd .hint-form .input_row .pwd_item{ 
  width: 74rpx;
  height: 74rpx;
  border: 2rpx solid #ddd;
  text-align: center;
  line-height: 70rpx;
}
.findPsd .hint-form .input_control{
  position: absolute;
  left: -500rpx;
}
.findPsd .findPsd{
  font-size: 28rpx;
  color: #2896fe;
  margin-right: 30rpx 0;
  justify-content: flex-end;
  width: 100%;
}

.findPsd .reg{
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  background-color: #2896fe;
  color: #fff;
  margin-top: 60rpx;
  box-sizing: border-box;
}
.findPsd .disabledColor{
  opacity: 0.6;
}