/* pages/mine/userLenge.wxss */
.userLenge .title {
    font-size: 30rpx;
    color: #333;
    padding: 10rpx 42rpx;
}

.userLenge .title .border-right {
    width: 6rpx;
    height: 25rpx;
    background-color: #2896fe;
    display: inline-block;
    margin-right: 22rpx;
}

.userLenge .explain {
    padding: 40rpx 0;
}

.userLenge .explain .one {
    margin-bottom: 6rpx;
    padding-left: 38rpx;
}
.userLenge .colorblue{
    color: #2896fe;
}
.userLenge .explain .one .num-left {
    height: 56rpx;
    width: 56rpx;
    border-radius: 50%;
    background-color: #2896fe;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    line-height: 54rpx;
    display: inline-block;
    vertical-align: middle;
}

.userLenge .explain .one .text {
    font-size: 26rpx;
    color: #333;
    padding: 0 40rpx;
    display: inline-block;
    vertical-align: middle;
}

.userLenge .explain .line {
    border-right: 2rpx dashed #2896fe;
    width: 1rpx;
    height: 82rpx;
    margin: 6rpx 0 0 24rpx;
}

.userLenge .area {
    padding: 40rpx 0;
}

.userLenge .area .area-title {
    font-size: 26rpx;
    color: #333;
    padding: 0 40rpx;
    line-height: 42rpx;
}

.userLenge .area .area-tips {
    font-size: 26rpx;
    color: #333;
    padding: 0 40rpx;
    line-height: 48rpx;
}

.userLenge .area .net {
    padding: 0 40rpx;
}

.userLenge .area .net .net-work {
    font-size: 26rpx;
    color: #2896fe;
}

.userLenge .area .net .copy {
    font-size: 22rpx;
    color: #333;
    height: 38rpx;
    width: 82rpx;
    line-height: 38rpx;
    text-align: center;
    background-color: #ddd;
    display: inline-block;
    border-radius: 10px;
    margin-left: 20rpx;
}

.userLenge .img {
    width: 100%;
    height: 320rpx;
    margin: 20rpx 0 60rpx 0;
}

.userLenge .img1 {
    height: 287rpx;
}

.userLenge .img2 {
    height: 320rpx;
}

.userLenge .img3 {
    height: 314rpx;
}

.userLenge .img4 {
    height: 283rpx;
}

.userLenge .img6 {
    display: inline-block;
    vertical-align: middle;
    width: 28rpx;
    height: 32rpx;
}

.userLenge .img5 {
    width: 343rpx;
    height: 272rpx;
    margin: 60rpx auto;
    display: block;
}